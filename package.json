{
  "name": "grid-reveal",
  "version": "0.2.0",
  "author": "amirhouieh",
  "license": "MIT",
  "homepage": "https://github.com/amirhouieh/webgrider",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "engines": {
    "node": ">=10"
  },
  "scripts": {
    "start": "tsdx watch",
    "build": "tsdx build",
    "test": "tsdx test",
    "sandbox": "ts-node sandbox/sandbox.ts",
    "lint": "tsdx lint",
    "prepare": "tsdx build",
    "size": "size-limit",
    "analyze": "size-limit --why"
  },
  "husky": {
    "hooks": {
      "pre-commit": "tsdx lint"
    }
  },
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "module": "dist/gridreveal.esm.js",
  "size-limit": [
    {
      "path": "dist/gridreveal.cjs.production.min.js",
      "limit": "10 KB"
    },
    {
      "path": "dist/gridreveal.esm.js",
      "limit": "10 KB"
    }
  ],
  "devDependencies": {
    "@types/jest": "^27.0.2",
    "@types/node": "^16.11.6",
    "ts-node": "^10.4.0",
    "tsdx": "^0.7.2",
    "tslib": "^1.14.1"
  },
  "dependencies": {
    "puppeteer": "^10.4.0"
  }
}
